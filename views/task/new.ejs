<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Task</title>
</head>
<body>
    <%- include("../partials/navbar") %>
    <h1 class="heading">Add Task</h1>
    <form action="/tasks/new" method="post">

        <label for="content"> Add new task</label>
        <input type="text" name="content" id="content">

        <label for="dueAt"> Due At: </label>
        <input type="date" name="dueAt" id="dueAt">

        <label for="list">List</label>
        <select id="list" name="list" required>
            <option value=""> Select a list </option>
                <% allLists.forEach(list => { %>
             <option value="<%= list._id %>"><%= list.name %></option>
                <% }) %>
        </select>

         <button type="submit">Create task</button>

         <a href="/auth/welcome">Home Page</a>
    </form>
</body>
</html>