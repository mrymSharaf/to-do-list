<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/navbar/main.css" />
    <link rel="stylesheet" href="/styles/list/details.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css">
    <title>List Details</title>
</head>

<body>
  <%- include("../partials/navbar.ejs") %>

  <div class="list-details-container">
    <div class="list-header">
      <h1><%= foundList.name %></h1>
      <div class="list-actions">
        <a href="/lists/edit/<%= foundList._id %>" class="icon-button" title="Edit List">
          <i class="bi bi-pen"></i>
        </a>
        <form action="/lists/delete/<%= foundList._id %>?_method=DELETE" method="POST" class="delete-form">
          <button type="submit" class="icon-button" title="Delete List">
            <i class="bi bi-trash"></i>
          </button>
        </form>
      </div>
    </div>

    <div class="task-list">
      <% if (foundList.tasks.length > 0) { %>
        <% foundList.tasks.forEach(task => { %>
          <div class="task-item">
            <div class="task-content">
              <form action="/tasks/<%= task._id %>/toggle" method="POST" class="inline-form">
                <input type="checkbox" name="completed" <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()" />
              </form>
              <%= task.content %>
            </div>
            <div class="task-actions">
              <a href="/tasks/edit/<%= task._id %>">Edit</a>
              <form action="/tasks/delete/<%= task._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No tasks in this list.</p>
      <% } %>
    </div>
  </div>
</body>

</html>