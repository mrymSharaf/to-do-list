<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../style/welcomePage/main.css">
</head>
<body>
  <%- include("../partials/navbar.ejs") %>
  <main>
      <% if (userLists.length > 0) { %>
    <div class="list-grid">
      <% userLists.forEach(list => { %>
        <div class="list-card">
          <h2><%= list.name %></h2>
          <% if (list.tasks.length > 0) { %>
            <ul>
              <% list.tasks.forEach(task => { %>
                <li>
                 <form action="/tasks/<%= task._id %>/toggle" method="POST" class="inline-form">
                <input type="checkbox" name="completed" <%= task.completed ? 'checked' : '' %> onchange="this.form.submit()" />
                </form>
                <strong><%= task.content %></strong> â€“ <%= task.dueAt?.toLocaleDateString() %>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p>No tasks in this list.</p>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <h1>Welcome <%= user.username %></h1>
    <a href="/lists/new"> Start Planning </a>
  <% } %>
  </main>
</body>
</html>